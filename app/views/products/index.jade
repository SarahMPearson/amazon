extends ../shared/template
block content
  .row
    .col-xs-12
      table#index.table.table-condensed.table-hover
        thead
          th Name
          th Photo
          th Price
        tbody
          each product in products
            tr
              td
                form(method='post', action='/cart')
                  input(type='hidden', name='productId', value=product._id)
                  button.btn.btn-primary.btn-sm(type='submit')= product.name
              td: img(src=product.photo)
              td $#{product.price.toFixed(2)}


block scripts

